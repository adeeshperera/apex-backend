# Environment Variables for Apex Backend
# Copy this to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Port (for local development only - Vercel/Railway manages this)
PORT=3001

# MongoDB Connection String
# Get this from MongoDB Atlas:
# 1. Go to MongoDB Atlas Dashboard
# 2. Click "Connect"
# 3. Choose "Connect with MongoDB Shell" or "Drivers"
# 4. Copy the connection string and replace <username> and <password>
# IMPORTANT: NO QUOTES - just the URL
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=Cluster0

# JWT Secret Key
# Generate a secure random key using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here

# CORS Origin
# For development, use http://localhost:3000
# For production with Vercel, use https://apex-client-side.vercel.app
CORS_ORIGIN=https://apex-client-side.vercel.app
